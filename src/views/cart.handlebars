<div class="container" display="flex">
    <div style="padding: 80px" ; class="row">
        {{#each cart.products}}
        <div class="card" style="width: 2000px;">
            <p style="text-align: left;" class="card-text"> Id: {{this.product._id}}</p>
            <img style="float: left; margin-right: 10px; width: 350px;" src="{{this.product.thumbnail}}"
                class="card-img-top" alt="..." title="Id: {{this.product._id}}">
            <div class="card-body">

                <h1 id="title" ; style="text-align: center; font-size:25px;" class="card-text"> {{this.product.title}}
                </h1>
                <h2 style="text-align: center; font-size:20px;" class="card-text"> {{this.product.description}}</h2>
                <h2 style="text-align: center; font-size:20px;" class="card-text"> $ {{this.product.price}}</h2>
                <h2 style="color:rgb(0, 0, 0); text-align: center; font-size:20px;" class="card-text"> Quantity:
                    {{this.quantity}}</h2>

                <h2 style="color:rgb(0, 0, 0); text-align: center; font-size:20px;" class="card-text"> Total:
                    {{this.quantity}}</h2>

                <div style="align-items: center; justify-content: space-between;">
                    <button onclick="deleteProductFromCart('65161b18b4f0ae3a37ba72e2' , '{{this.id}}')"
                        style="float: right; display: block; margin: 0 auto;"
                        class="btn btn-danger">DELETE</button>
                </div>
            </div>
        </div>
        {{/each}}
    </div>


</div>




